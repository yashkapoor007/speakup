<div class="comment clearfix">
	<div class="comment_content">
		<b>Name</b><p class="comment_name">
			<%= comment.name%>
		</p>
<b>Message</b>
		<p class="comment_body">
			<%= comment.body%>
		</p>

		<p class="comment_title">
			<em><%= time_ago_in_words(comment.created_at)%> Ago</em>
		</p>
	</div>
	<% if user_signed_in? %>
<p><%= link_to 'Delete',[comment.post,comment],method: :delete,class: "button",data: { confirm: 'Are you sure?'}%>
	<% end %>
</p>
</div>
