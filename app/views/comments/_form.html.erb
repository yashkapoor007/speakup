<% if user_signed_in? %>
<h3>Join Discussion</h3>
<%= form_for([@post,@post.comments.build]) do |f|%>
	<p>
		<%= f.label :name%>
		<br>
		<%= f.text_field :name%>
	</p>
		<p>
		<%= f.label :body%>
		<br>
		<%= f.text_area :body%>
	    </p>
	    <br>
	    <p>
	    	<%= f.submit %>
	    </p>

<%end%>
<%end%>